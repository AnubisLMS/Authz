    "version": "0.2.0",
    "configurations": [
        {
            "name": "basic",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "console": "integratedTerminal",
            "asRoot": true,  // needed for opening socket
            "cwd": "${workspaceFolder}",
            "args": ["--debug", "--policy", "${workspaceFolder}/authz/policy-default.json"]
        },
        {
            "name": "anubis",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "console": "integratedTerminal",
            "asRoot": true,  // needed for opening socket
            "cwd": "${workspaceFolder}",
            "args": ["--debug", "--policy", "${workspaceFolder}/authz/policy-anubis.yaml", "--authorizer", "anubis"]
        }
    ]
}